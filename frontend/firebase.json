{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "//": "IMPORTANT: Cloud Run service must have roles/run.invoker granted to allUsers for this rewrite to work. Run scripts/demo-on.sh before deploying, or manually grant: gcloud run services add-iam-policy-binding insightagent --member=allUsers --role=roles/run.invoker --region=asia-south1",
        "source": "/api/**",
        "run": {
          "serviceId": "insightagent",
          "region": "asia-south1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|png|gif|svg|ico|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
